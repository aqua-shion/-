
.icon-yidiandiantubiao13{
  font-size: 120rpx;
  color: rgb(255, 145, 0);
}
.lost_wrap .lost_item {
  display: flex;
  
  border-bottom: grey 1px solid;
  margin: 0rpx;
  
  background-color: white;
 
}

.lost_item .lost_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

 .lost_item .lost_img_wrap image {
  width: 200rpx;
  height: 200rpx;
}
.lost_item .lost_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.lost_item .lost_info_wrap .lost_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-weight: 700;
}
.lost_item .lost_info_wrap .lost_content {
  color:rgba(160, 153, 153, 0.938);
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
 .lost_time{
  
  color:rgba(160, 153, 153, 0.938);
  position: relative;
  left: 250rpx;
 
 }
 .lost_release{
  width: 120rpx;
  height: 120rpx;
 
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  z-index:1
}
